  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Docker",
      "type": "node",
      //"preLaunchTask": "watch-debug",
      "request": "attach",
      "port": 7841,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app",
      "protocol": "auto",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
